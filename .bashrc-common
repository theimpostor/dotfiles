setenv ()
{
	export $1=$2
}

setlbm ()
{
	export SHELL='bash'
    eval `/home/shoda/bin/setappdir.pl LBM $@`
}

setumds ()
{
	export SHELL='bash'
    eval `/home/shoda/bin/setappdir.pl UMDS $@`
}

appld ()
{
	export SHELL='bash'
    eval `/home/shoda/bin/appenvpath.pl LD_LIBRARY_PATH $@`
}

apppath ()
{
	export SHELL='bash'
	eval `/home/shoda/bin/appenvpath.pl PATH $@`
}

appcp ()
{
	export SHELL='bash'
    eval `/home/shoda/bin/appenvpath.pl CLASSPATH $@`
}

setcp ()
{
	export CLASSPATH=$@
	echo $CLASSPATH
}

cdr ()
{
	cd `perl -e '( $p, $s, $r ) = @ARGV; $p =~ s/$s/$r/; print $p;' $PWD $1 $2`
}

lbmdbg ()
{
	export LBM_DEBUG_MASK=$1
	export LBM_DEBUG_FILENAME=$2
	env | grep LBM_DEBUG
}

lbmdbgclr ()
{
	unset LBM_DEBUG_MASK
	unset LBM_DEBUG_FILENAME
}

lbmdbgall ()
{
	lbmdbg 0xFFFFFFFFFFFFFFFF $1
}

if [ -f ~/.git-completion.bash ]; then
    . ~/.git-completion.bash
fi

